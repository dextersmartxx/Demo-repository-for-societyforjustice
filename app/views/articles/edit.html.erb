<% form_for @article, :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :location %><br />
    <%= f.text_field :location %>
  </p>
  <p>
    <%= f.label :date_of_event %><br />
    <%= f.datetime_select :date_of_event %>
  </p>
  <p>
    <%= f.label :emphasis %><br />
    <%= f.text_field :emphasis %>
  </p>
  <p>
    <%= f.label :author %><br />
    <%= f.text_field :author %>
  </p>
  <p>
    <%= f.label :information %><br />
    <%= f.text_area :information %>
  </p>
  <p>
    <%= f.label :photo, "Photo" %>
    <%= f.file_field :photo %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<% if admin? %>
  <span class="return_link"><%= link_to 'Show', @article %></span>
  <span> | </span>
<% end %>

<span class="return_link"><%= link_to 'Back', articles_path %></span>

