<h1>Listing accounts</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Ac number</th>
    <th>Location</th>
    <th>Address</th>
    <th>Description</th>
    <th>Other info</th>
  </tr>

<% @accounts.each do |account| %>
  <tr>
    <td><%=h account.name %></td>
    <td><%=h account.ac_number %></td>
    <td><%=h account.location %></td>
    <td><%=h account.address %></td>
    <td><%=h account.description %></td>
    <td><%=h account.other_info %></td>
    <td><%= link_to 'Show', account %></td>
    <td><%= link_to 'Edit', edit_account_path(account) %></td>
    <td><%= link_to 'Destroy', account, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New account', new_account_path %>